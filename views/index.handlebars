<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            value="{{keyword}}"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit"><i
                class="fas fa-search"
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div class="card mb-3">
            <img
              class="card-img-top mt-1"
              src="{{this.image}}"
              alt="{{this.name}}"
            />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{this.category}}
              </div>

              <span class="badge badge-pill bg-primary p-2">
                <i class="fas fa-star fa-xs">{{this.rating}}</i>
              </span>
            </div>
            <div class="card-footer p-1 align-self-end">
              <a
                href="/restaurants/{{this._id}}/edit"
                class="text-dark"
              >Edit</a>
              <a href="/restaurants/{{this._id}}" class="text-dark">Detail</a>
              <form
                action="./restaurants/{{this._id}}?_method=DELETE"
                method="POST"
                style="display: inline"
              ><button type="submit">Delete</button></form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{! create }}
<div class="container d-flex justify-content-end">
  <a
    href="/restaurants/new"
    class="text-white border mb-2 p-2 text-decoration-none bg-dark"
  >Create</a>
</div>