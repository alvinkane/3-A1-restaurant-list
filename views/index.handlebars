<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input
            type="text"
            name="keyword"
            value="{{keyword}}"
            class="form-control"
            placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..."
            aria-describedby="search-button"
          />
          <div class="input-group-append">
            <button class="btn btn-major mt-1 ms-2 me-5" type="submit"><i
                class="fas fa-search"
              ></i></button>
          </div>
          <div class="dropdown">
            <button
              class="btn btn-secondary dropdown-toggle"
              type="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Sort
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/?sortBy=name_en&sortOrder=1">A
                  -> Z</a></li>
              <li><a
                  class="dropdown-item"
                  href="/?sortBy=name_en&sortOrder=-1"
                >Z -> A</a></li>
              <li><a
                  class="dropdown-item"
                  href="/?sortBy=category&sortOrder=1"
                >類別</a></li>
              <li><a
                  class="dropdown-item"
                  href="/?sortBy=location&sortOrder=1"
                >地區</a></li>
            </ul>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
          <div class="card mb-3">
            <img
              class="card-img-top mt-1"
              src="{{this.image}}"
              alt="{{this.name}}"
            />
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>
                {{this.category}}
              </div>

              <span class="badge badge-pill bg-primary p-2">
                <i class="fas fa-star fa-xs">{{this.rating}}</i>
              </span>
            </div>
            <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit"><button
                  class="btn btn-link btn-sm"
                >Edit</button></a>
              <a href="/restaurants/{{this._id}}"><button
                  class="btn btn-link btn-sm"
                >Detail</button></a>
              <form
                action="./restaurants/{{this._id}}?_method=DELETE"
                method="POST"
              ><button
                  class="btn btn-outline-danger btn-sm"
                  type="submit"
                >Delete</button></form>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>